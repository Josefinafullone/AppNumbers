<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:gravity="center"
    tools:context="activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/give_us_a_review_landmine_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView_Personaje"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:includeFontPadding="false"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/jessie"
                    android:contentDescription="TODO" />

            </LinearLayout>


            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="0"
                android:gravity="center"
                android:background="@drawable/fondoet"
                android:hint="@string/txt_name"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="26.00dp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:background="@drawable/fondoboton"
                android:onClick="Jugar"
                android:text="@string/boton_comenzar"
                android:textColor="#FFFFFF"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="22.00dp"
                android:textStyle="bold"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_mejorpuntaje"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/fondoet"
                android:includeFontPadding="false"
                android:minWidth="120dp"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.00dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>